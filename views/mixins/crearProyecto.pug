mixin crearProyecto(proyectoOne = {})

    form.agregar-proyecto(action=`/nuevo-proyecto/${proyectoOne.id || ''}` method="POST")
        .campo
            label(for="nombre") Nombre del proyecto:
            input(value=proyectoOne.nombre type="text" id="nombre" name="nombre" placeholder="Nombre del proyecto")
        .campo.enviar
            input(type="submit" value=`${proyectoOne.nombre ? 'Guardar' : 'Agregar'}` class="boton")
