doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/css/normalize.css")
    link(rel="stylesheet", href="/css/app.css")
    title #{nombrePagina}
  body 
    header.barra 
      a(href="/")
        h1 UpTask - Administrador de proyectos - #{year}
      a(href="#") 
        h3 Cerrar sesi√≥n 

    main.contenedor
      aside.contenedor-proyectos
        .panel.crear-proyecto 
          a(href="/nuevo-proyecto" class="boton") Nuevo proyecto
            span +
        .panel(class="lista-proyectos")
          h2 Proyectos
          ul#proyectos.proyectos 

            if(proyectos)
              each proy in proyectos
                li
                  a(href=`/proyectos/${proy.url}`)= proy.nombre 

      block contenido
